---
import LinkedInIcon from "@/components/icons/LinkedInIcon.astro";

const socials = [
  {
    name: "LinkedIn",
    icon: LinkedInIcon,
    link: "https://www.linkedin.com/company/negoco-cloud/",
  },
];
---

<footer
  class="bg-white rounded-lg shadow sm:flex sm:items-center sm:justify-between p-4 sm:p-6 xl:p-8 dark:bg-gray-800 antialiased"
>
  <p class="mb-4 text-sm text-center text-gray-500 dark:text-gray-400 sm:mb-0">
    &copy; 2025 <a
      href="https://negococloud.es/"
      class="hover:underline"
      target="_blank">Negoco Cloud</a
    >. Todos los derechos reservados.
  </p>
  <div class="flex justify-center items-center space-x-1">
    {
      socials.map((social) => (
        <a
          href={social.link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          aria-label={social.name}
        >
          <social.icon class="w-6 h-6" />
        </a>
      ))
    }
  </div>
</footer>
